<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/color_primary"
    tools:context=".ui.views.currenciesListingFragment.CurrenciesListingFragment">

     <com.google.android.material.button.MaterialButton
         android:id="@+id/base_currency_image_view"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/_15dp"
         android:layout_marginBottom="@dimen/_10dp"
         android:background="@color/white"
         android:backgroundTint="@color/white"
         android:textColor="@color/black"
         android:insetTop="@dimen/_0dp"
         android:insetBottom="@dimen/_0dp"
         app:backgroundTint="@null"
         app:iconTintMode="multiply"
         app:icon="@drawable/eur_flag"
         app:iconSize="@dimen/_30dp"
         app:iconGravity="textStart"
         tools:text="EUR"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_weight="1"
        android:background="@color/white"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:ignore="InefficientWeight"
        tools:listitem="@layout/layout_currency_recycler_view_item"/>
</LinearLayout>